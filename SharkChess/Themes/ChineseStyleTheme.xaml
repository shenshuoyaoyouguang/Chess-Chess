<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- 国风 UI 设计版主题资源 -->
    <SolidColorBrush x:Key="ChineseStyleBoardBackground" Color="#F0E6D2"/>
    <SolidColorBrush x:Key="ChineseStyleLineColor" Color="#654321"/>
    <SolidColorBrush x:Key="ChineseStyleRiverText" Color="#8B4513"/>
    <SolidColorBrush x:Key="ChineseStyleCoordinate" Color="#8B7355"/>
    <SolidColorBrush x:Key="ChineseStylePalaceLine" Color="#DAA520"/>
    
    <SolidColorBrush x:Key="ChineseStyleRedPieceBackground" Color="#FAF0E6"/>
    <SolidColorBrush x:Key="ChineseStyleRedPieceBorder" Color="#B22222"/>
    <SolidColorBrush x:Key="ChineseStyleRedPieceText" Color="#8B0000"/>
    
    <SolidColorBrush x:Key="ChineseStyleBlackPieceBackground" Color="#FAF0E6"/>
    <SolidColorBrush x:Key="ChineseStyleBlackPieceBorder" Color="#2F4F4F"/>
    <SolidColorBrush x:Key="ChineseStyleBlackPieceText" Color="#2F4F4F"/>

    <SolidColorBrush x:Key="ChineseStyleSelectionHighlight" Color="#CD5C5C"/>
    <SolidColorBrush x:Key="ChineseStyleLegalMoveHint" Color="#228B22"/>

    <!-- 宣纸纹理效果 -->
    <DrawingBrush x:Key="PaperTextureBrush" TileMode="Tile" Viewport="0,0,100,100" ViewportUnits="Absolute">
        <DrawingBrush.Drawing>
            <DrawingGroup>
                <GeometryDrawing Brush="#F0E6D2">
                    <GeometryDrawing.Geometry>
                        <RectangleGeometry Rect="0,0,100,100"/>
                    </GeometryDrawing.Geometry>
                </GeometryDrawing>
            </DrawingGroup>
        </DrawingBrush.Drawing>
    </DrawingBrush>

</ResourceDictionary>
