<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- ==================== 颜色定义 ==================== -->
    
    <!-- 背景色 -->
    <SolidColorBrush x:Key="WindowBackground" Color="#1e1e1e"/>
    <SolidColorBrush x:Key="PanelBackground" Color="#252526"/>
    <SolidColorBrush x:Key="MenuBackground" Color="#2d2d30"/>
    <SolidColorBrush x:Key="ToolbarBackground" Color="#2d2d30"/>
    <SolidColorBrush x:Key="StatusBarBackground" Color="#2d2d30"/>
    
    <!-- 控件背景色 -->
    <SolidColorBrush x:Key="ControlBackground" Color="#3c3c3c"/>
    <SolidColorBrush x:Key="ControlBackgroundHover" Color="#4a4a4a"/>
    <SolidColorBrush x:Key="ControlBackgroundPressed" Color="#333333"/>
    <SolidColorBrush x:Key="InputBackground" Color="#2d2d30"/>
    
    <!-- 边框色 -->
    <SolidColorBrush x:Key="BorderBrush" Color="#555555"/>
    <SolidColorBrush x:Key="PanelBorderBrush" Color="#3e3e42"/>
    
    <!-- 文本色 -->
    <SolidColorBrush x:Key="TextPrimary" Color="#cccccc"/>
    <SolidColorBrush x:Key="TextSecondary" Color="#888888"/>
    <SolidColorBrush x:Key="TextHighlight" Color="#ffffff"/>
    
    <!-- 强调色 -->
    <SolidColorBrush x:Key="AccentBlue" Color="#569cd6"/>
    <SolidColorBrush x:Key="AccentGreen" Color="#4ec9b0"/>
    <SolidColorBrush x:Key="AccentYellow" Color="#dcdcaa"/>
    <SolidColorBrush x:Key="AccentOrange" Color="#ce9178"/>
    <SolidColorBrush x:Key="AccentRed" Color="#ff6b6b"/>
    
    <!-- ==================== 按钮样式 ==================== -->
    
    <!-- 默认按钮 -->
    <Style x:Key="DefaultButton" TargetType="Button">
        <Setter Property="Background" Value="{StaticResource ControlBackground}"/>
        <Setter Property="Foreground" Value="{StaticResource TextPrimary}"/>
        <Setter Property="BorderBrush" Value="{StaticResource BorderBrush}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="Padding" Value="10,8"/>
        <Setter Property="FontSize" Value="13"/>
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            CornerRadius="3"
                            Padding="{TemplateBinding Padding}">
                        <ContentPresenter HorizontalAlignment="Center" 
                                        VerticalAlignment="Center"/>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Background" Value="{StaticResource ControlBackgroundHover}"/>
                            <Setter Property="Foreground" Value="{StaticResource TextHighlight}"/>
                        </Trigger>
                        <Trigger Property="IsPressed" Value="True">
                            <Setter Property="Background" Value="{StaticResource ControlBackgroundPressed}"/>
                        </Trigger>
                        <Trigger Property="IsEnabled" Value="False">
                            <Setter Property="Opacity" Value="0.5"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- 全局按钮样式 -->
    <Style TargetType="Button" BasedOn="{StaticResource DefaultButton}"/>

    <!-- 紧凑按钮 -->
    <Style x:Key="CompactButton" TargetType="Button" BasedOn="{StaticResource DefaultButton}">
        <Setter Property="Padding" Value="8,5"/>
        <Setter Property="FontSize" Value="12"/>
        <Setter Property="HorizontalContentAlignment" Value="Left"/>
    </Style>

    <!-- 工具栏按钮 -->
    <Style x:Key="ToolbarButton" TargetType="Button" BasedOn="{StaticResource DefaultButton}">
        <Setter Property="Padding" Value="12,6"/>
        <Setter Property="FontSize" Value="12"/>
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="BorderThickness" Value="0"/>
    </Style>

    <!-- ==================== 文本框样式 ==================== -->
    
    <Style x:Key="DefaultTextBox" TargetType="TextBox">
        <Setter Property="Background" Value="{StaticResource InputBackground}"/>
        <Setter Property="Foreground" Value="{StaticResource TextPrimary}"/>
        <Setter Property="BorderBrush" Value="{StaticResource BorderBrush}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="Padding" Value="6,4"/>
        <Setter Property="FontSize" Value="13"/>
        <Setter Property="VerticalContentAlignment" Value="Center"/>
        <Setter Property="CaretBrush" Value="{StaticResource TextPrimary}"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="TextBox">
                    <Border Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            CornerRadius="2"
                            Padding="{TemplateBinding Padding}">
                        <ScrollViewer x:Name="PART_ContentHost"/>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsFocused" Value="True">
                            <Setter Property="BorderBrush" Value="{StaticResource AccentBlue}"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style TargetType="TextBox" BasedOn="{StaticResource DefaultTextBox}"/>

    <!-- ==================== 列表框样式 ==================== -->
    
    <Style x:Key="DefaultListBox" TargetType="ListBox">
        <Setter Property="Background" Value="{StaticResource InputBackground}"/>
        <Setter Property="Foreground" Value="{StaticResource TextPrimary}"/>
        <Setter Property="BorderBrush" Value="{StaticResource BorderBrush}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="FontSize" Value="12"/>
        <Setter Property="ScrollViewer.HorizontalScrollBarVisibility" Value="Disabled"/>
        <Setter Property="VirtualizingPanel.IsVirtualizing" Value="True"/>
        <Setter Property="VirtualizingPanel.VirtualizationMode" Value="Recycling"/>
    </Style>

    <Style TargetType="ListBox" BasedOn="{StaticResource DefaultListBox}"/>

    <Style x:Key="ListBoxItemStyle" TargetType="ListBoxItem">
        <Setter Property="Padding" Value="4,3"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="ListBoxItem">
                    <Border x:Name="Bd" 
                            Padding="{TemplateBinding Padding}"
                            Background="Transparent">
                        <ContentPresenter/>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="Bd" Property="Background" Value="{StaticResource ControlBackground}"/>
                        </Trigger>
                        <Trigger Property="IsSelected" Value="True">
                            <Setter TargetName="Bd" Property="Background" Value="{StaticResource ControlBackgroundHover}"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style TargetType="ListBoxItem" BasedOn="{StaticResource ListBoxItemStyle}"/>

    <!-- ==================== 单选按钮样式 ==================== -->
    
    <Style x:Key="DefaultRadioButton" TargetType="RadioButton">
        <Setter Property="Foreground" Value="{StaticResource TextPrimary}"/>
        <Setter Property="FontSize" Value="12"/>
        <Setter Property="VerticalContentAlignment" Value="Center"/>
        <Setter Property="Margin" Value="0,4"/>
    </Style>

    <Style TargetType="RadioButton" BasedOn="{StaticResource DefaultRadioButton}"/>

    <!-- ==================== 复选框样式 ==================== -->
    
    <Style x:Key="DefaultCheckBox" TargetType="CheckBox">
        <Setter Property="Foreground" Value="{StaticResource TextPrimary}"/>
        <Setter Property="FontSize" Value="12"/>
        <Setter Property="VerticalContentAlignment" Value="Center"/>
        <Setter Property="Margin" Value="0,4"/>
    </Style>

    <Style TargetType="CheckBox" BasedOn="{StaticResource DefaultCheckBox}"/>

    <!-- ==================== 组合框样式 ==================== -->
    
    <Style x:Key="DefaultComboBox" TargetType="ComboBox">
        <Setter Property="Background" Value="{StaticResource ControlBackground}"/>
        <Setter Property="Foreground" Value="{StaticResource TextPrimary}"/>
        <Setter Property="BorderBrush" Value="{StaticResource BorderBrush}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="FontSize" Value="12"/>
        <Setter Property="Padding" Value="6,4"/>
    </Style>

    <Style TargetType="ComboBox" BasedOn="{StaticResource DefaultComboBox}"/>

    <!-- ==================== 菜单样式 ==================== -->
    
    <Style x:Key="MenuStyle" TargetType="Menu">
        <Setter Property="Background" Value="{StaticResource MenuBackground}"/>
        <Setter Property="Foreground" Value="{StaticResource TextPrimary}"/>
        <Setter Property="FontSize" Value="13"/>
    </Style>

    <Style TargetType="Menu" BasedOn="{StaticResource MenuStyle}"/>

    <Style x:Key="MenuItemStyle" TargetType="MenuItem">
        <Setter Property="Foreground" Value="{StaticResource TextPrimary}"/>
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="Padding" Value="8,5"/>
    </Style>

    <Style TargetType="MenuItem" BasedOn="{StaticResource MenuItemStyle}"/>

    <!-- ==================== 工具栏样式 ==================== -->
    
    <Style x:Key="ToolBarStyle" TargetType="ToolBar">
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="Padding" Value="5,2"/>
    </Style>

    <Style TargetType="ToolBar" BasedOn="{StaticResource ToolBarStyle}"/>

    <Style x:Key="ToolBarTrayStyle" TargetType="ToolBarTray">
        <Setter Property="Background" Value="{StaticResource ToolbarBackground}"/>
    </Style>

    <Style TargetType="ToolBarTray" BasedOn="{StaticResource ToolBarTrayStyle}"/>

    <!-- ==================== 状态栏样式 ==================== -->
    
    <Style x:Key="StatusBarStyle" TargetType="StatusBar">
        <Setter Property="Background" Value="{StaticResource StatusBarBackground}"/>
        <Setter Property="Foreground" Value="{StaticResource TextSecondary}"/>
        <Setter Property="FontSize" Value="12"/>
        <Setter Property="Padding" Value="5,3"/>
    </Style>

    <Style TargetType="StatusBar" BasedOn="{StaticResource StatusBarStyle}"/>

    <Style x:Key="StatusBarItemStyle" TargetType="StatusBarItem">
        <Setter Property="Padding" Value="5,0"/>
    </Style>

    <Style TargetType="StatusBarItem" BasedOn="{StaticResource StatusBarItemStyle}"/>

    <!-- ==================== 分隔符样式 ==================== -->
    
    <Style x:Key="SeparatorStyle" TargetType="Separator">
        <Setter Property="Background" Value="{StaticResource BorderBrush}"/>
        <Setter Property="Margin" Value="5,0"/>
    </Style>

    <Style TargetType="Separator" BasedOn="{StaticResource SeparatorStyle}"/>

    <!-- ==================== 滚动条样式 ==================== -->
    
    <Style x:Key="ScrollBarStyle" TargetType="ScrollBar">
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="Width" Value="10"/>
    </Style>

    <Style TargetType="ScrollBar" BasedOn="{StaticResource ScrollBarStyle}"/>

    <!-- ==================== ScrollViewer 样式 ==================== -->
    
    <Style x:Key="ScrollViewerStyle" TargetType="ScrollViewer">
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="VerticalScrollBarVisibility" Value="Auto"/>
        <Setter Property="HorizontalScrollBarVisibility" Value="Disabled"/>
    </Style>

    <Style TargetType="ScrollViewer" BasedOn="{StaticResource ScrollViewerStyle}"/>

</ResourceDictionary>